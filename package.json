{
  "name": "smsi",
  "version": "1.0.0",
  "description": "Simple MicroService Interface",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc --project .",
    "test": "tslint --project .; jest",
    "watch": "jest --watchAll",
    "prepublishOnly": "yarn test; yarn build",
    "bump": "npm-bump patch",
    "clean": "del index.js index.d.ts 'src/**/*.d.ts' 'src/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jdiehl/smsi.git"
  },
  "keywords": [
    "microservices",
    "interface"
  ],
  "author": "Jonathan Diehl",
  "license": "ISC",
  "devDependencies": {
    "@types/got": "^8.3.3",
    "@types/jest": "^23.3.0",
    "del-cli": "^1.1.0",
    "got": "^8.3.2",
    "jest": "^23.4.1",
    "npm-bump": "^0.0.25",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/node": "^10.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
